  "severity_levels": {
    "critical": {
      "name": "危急",
      "priority": 1,
      "response_time": "立即",
      "description": "需要紧急干预，可能涉及生命安全"
    },
    "high": {
      "name": "高风险",
      "priority": 2,
      "response_time": "1小时内",
      "description": "需要优先处理，可能导致严重后果"
    },
    "moderate": {
      "name": "中等",
      "priority": 3,
      "response_time": "24小时内",
      "description": "常规处理，影响用户健康目标"
    },
    "low": {
      "name": "低风险",
      "priority": 4,
      "response_time": "48小时内",
      "description": "维护性干预，预防性措施"
    }
  },

  "triggers": {

    "_comment_physiological": "========== 生理类 Triggers ==========",

    "high_glucose": {
      "name": "高血糖",
      "category": "physiological",
      "severity": "high",
      "description": "血糖值超过正常范围上限",
      "threshold": {
        "value": ">10.0",
        "unit": "mmol/L",
        "reference": "空腹或餐后2小时"
      },
      "detection_source": ["cgm_signal", "manual_log"],
      "routed_agents": ["GlucoseAgent", "MetabolicAgent"],
      "intervention_types": ["diet_adjustment", "medication_review", "education"],
      "keywords": ["血糖高", "糖高了", "测出来偏高"]
    },

    "low_glucose": {
      "name": "低血糖",
      "category": "physiological",
      "severity": "critical",
      "description": "血糖值低于安全范围，存在危险",
      "threshold": {
        "value": "<3.9",
        "unit": "mmol/L"
      },
      "detection_source": ["cgm_signal", "manual_log", "text_symptom"],
      "routed_agents": ["CrisisAgent", "GlucoseAgent"],
      "intervention_types": ["emergency_glucose", "monitoring", "prevention"],
      "keywords": ["头晕", "出冷汗", "心慌", "手抖", "饿得慌"]
    },

    "glucose_spike": {
      "name": "血糖波动",
      "category": "physiological",
      "severity": "moderate",
      "description": "血糖波动幅度过大，提示控制不佳",
      "threshold": {
        "variation": ">3.0",
        "unit": "mmol/L",
        "timeframe": "2小时内"
      },
      "detection_source": ["cgm_signal"],
      "routed_agents": ["GlucoseAgent", "NutritionAgent"],
      "intervention_types": ["meal_timing", "gi_education", "stress_management"]
    },

    "low_hrv": {
      "name": "低心率变异性",
      "category": "physiological",
      "severity": "moderate",
      "description": "HRV-SDNN低，提示自主神经功能下降或压力过载",
      "threshold": {
        "sdnn": "<30",
        "unit": "ms"
      },
      "detection_source": ["ppg_signal", "ecg_signal"],
      "routed_agents": ["StressAgent", "SleepAgent"],
      "intervention_types": ["stress_reduction", "sleep_optimization", "breathing_exercise"],
      "correlation": ["poor_sleep", "high_stress", "overtraining"]
    },

    "high_stress_hrv": {
      "name": "压力指标异常",
      "category": "physiological",
      "severity": "high",
      "description": "HRV压力指数超标，提示慢性压力",
      "threshold": {
        "stress_index": ">80"
      },
      "detection_source": ["ppg_signal"],
      "routed_agents": ["StressAgent", "MentalHealthAgent"],
      "intervention_types": ["stress_management", "relaxation", "counseling"]
    },

    "high_heartrate": {
      "name": "心率过高",
      "category": "physiological",
      "severity": "moderate",
      "description": "静息心率超过正常范围",
      "threshold": {
        "hr": ">100",
        "unit": "bpm",
        "context": "静息状态"
      },
      "detection_source": ["ppg_signal", "hr_monitor"],
      "routed_agents": ["StressAgent", "ExerciseAgent"],
      "intervention_types": ["relaxation", "activity_adjustment"]
    },

    "low_heartrate": {
      "name": "心率过低",
      "category": "physiological",
      "severity": "moderate",
      "description": "静息心率过低，非训练性",
      "threshold": {
        "hr": "<60",
        "unit": "bpm",
        "exclude": "运动员"
      },
      "detection_source": ["ppg_signal", "hr_monitor"],
      "routed_agents": ["CrisisAgent"],
      "intervention_types": ["medical_referral"]
    },

    "poor_sleep": {
      "name": "睡眠质量差",
      "category": "physiological",
      "severity": "moderate",
      "description": "睡眠效率低或深睡不足",
      "threshold": {
        "efficiency": "<70",
        "unit": "%",
        "or_deep_sleep": "<15%"
