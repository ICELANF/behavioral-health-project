      "detection_source": ["sleep_monitor", "text_report"],
      "routed_agents": ["SleepAgent"],
      "intervention_types": ["sleep_hygiene", "schedule_adjustment"],
      "keywords": ["没睡好", "失眠", "睡不着", "半夜醒"]
    },

