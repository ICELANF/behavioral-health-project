  "stage_detection": {
    "_comment": "解析层 - 改变阶段自动判定规则（基于历史数据频率）",
    "rules": {
      "first_assessment": {
        "condition": "assessment_count == 1",
        "detected_stage": "intention",
        "stage_name": "意向期",
        "description": "初次测评，尚无历史数据对比"
      },
      "continuous_improvement": {
        "condition": "consecutive_improvement_weeks >= 2",
        "detected_stage": "action",
        "stage_name": "行动期",
        "description": "连续2周以上指标好转，已进入行动阶段"
      },
      "stable_maintenance": {
        "condition": "stable_weeks >= 8 AND task_completion_rate >= 0.8",
        "detected_stage": "maintenance",
        "stage_name": "维持期",
        "description": "持续8周稳定，进入习惯维持阶段"
      },
      "fluctuation": {
        "condition": "improvement_then_decline",
        "detected_stage": "preparation",
        "stage_name": "准备期",
        "description": "指标波动，需要重新准备"
      },
      "no_change": {
        "condition": "assessment_count > 1 AND no_improvement",
        "detected_stage": "contemplation",
        "stage_name": "思考期",
        "description": "多次测评但无明显改变"
      }
    },
    "detection_indicators": {
      "improvement_metrics": ["hrv_sdnn", "sleep_quality", "energy_level", "mood_score", "anxiety_score_inverse"],
      "improvement_threshold": 0.1,
      "consecutive_weeks_for_action": 2,
      "stable_weeks_for_maintenance": 8
    },
    "stage_to_readiness_mapping": {
      "_comment": "将检测到的阶段映射到五层次心理准备度",
      "intention": "level_2_resistance_reflection",
      "contemplation": "level_2_resistance_reflection",
      "preparation": "level_3_selective_acceptance",
      "action": "level_4_adaptive_alignment",
      "maintenance": "level_5_full_internalization"
    }
  },

  "spi_calculation": {
    "_comment": "成功可能性指数(SPI)计算模型 - 自研公式",
    "formula": "SPI = (trigger_score/125) × level_coefficient × (urgency_score/30) × 100",
    "components": {
      "trigger_score": {
        "description": "改变触发原因得分 (第一部分问卷)",
        "max_score": 125,
        "dimensions": {
          "intrinsic_drivers": {"questions": "1-4", "max": 20},
          "external_events": {"questions": "5-8", "max": 20},
          "emotional_triggers": {"questions": "9-12", "max": 20},
          "cognitive_shifts": {"questions": "13-16", "max": 20},
          "capability_resources": {"questions": "17-20", "max": 20},
          "social_support": {"questions": "21-25", "max": 25}
        }
      },
      "level_coefficient": {
        "description": "心理层次系数",
        "values": {
          "level_1": 0.3,
          "level_2": 0.5,
          "level_3": 0.7,
          "level_4": 0.9,
          "level_5": 1.0
        }
      },
      "urgency_score": {
        "description": "改变迫切程度得分 (第三部分问卷)",
        "max_score": 30,
        "dimensions": {
          "urgency": {"question": 46, "max": 10},
          "importance": {"question": 49, "max": 10},
          "readiness": {"question": 50, "max": 10}
        }
      }
    },
    "interpretation": {
      "high": {"range": [60, 100], "label": "高成功可能性", "recommendation": "立即开始系统化改变计划"},
      "medium": {"range": [40, 59], "label": "中等成功可能性", "recommendation": "强化部分要素后启动"},
      "low": {"range": [20, 39], "label": "较低成功可能性", "recommendation": "先进行准备工作"},
      "very_low": {"range": [0, 19], "label": "成功可能性低", "recommendation": "时机尚未成熟，持续支持"}
    }
  },

  "motivation_calculation": {
    "_comment": "解析层 - 动机强度计算（核心：精力与心情匹配度）",
    "formula": "energy_mood_based",
    "primary_method": {
      "name": "精力-心情匹配度",
      "description": "根据'精力'与'心情'指标的匹配度计算动机强度",
      "calculation": {
        "step_1": "match_score = 1 - abs(energy - mood) / 100",
        "step_2": "base_motivation = (energy + mood) / 2",
        "step_3": "motivation = base_motivation * (0.5 + 0.5 * match_score)",
        "explanation": "匹配度高时动机更强，不匹配时动机打折"
      },
      "energy_source": "user_state.physiological.energy_level",
      "mood_source": "user_state.psychological.mood_score",
      "weight": 0.6
    },
    "secondary_factors": {
      "goal_clarity": {
        "description": "目标清晰度",
        "source": "user_profile.goals",
        "weight": 0.15
      },
      "past_success": {
        "description": "历史任务完成率",
        "source": "task_history.completion_rate",
        "weight": 0.15
      },
      "social_support": {
        "description": "社会支持度",
        "source": "user_profile.support_score",
        "weight": 0.1
      }
    },
    "interpretation": {
      "high_energy_high_mood": {
        "condition": "energy >= 70 AND mood >= 70",
        "motivation_level": "optimal",
        "label": "最佳状态",
        "recommendation": "适合挑战性任务"
      },
      "high_energy_low_mood": {
        "condition": "energy >= 70 AND mood < 50",
        "motivation_level": "mismatched_active",
        "label": "精力充沛但情绪低落",
        "recommendation": "先进行情绪调节，再安排任务"
      },
      "low_energy_high_mood": {
        "condition": "energy < 50 AND mood >= 70",
        "motivation_level": "mismatched_passive",
        "label": "心情好但精力不足",
        "recommendation": "安排轻松愉快的小任务"
      },
      "low_energy_low_mood": {
        "condition": "energy < 50 AND mood < 50",
        "motivation_level": "depleted",
        "label": "双低状态",
        "recommendation": "优先休息恢复，暂缓行为任务"
      }
    },
    "thresholds": {
      "low": {"range": [0, 40], "label": "动机不足", "max_task_difficulty": 1},
      "moderate": {"range": [40, 70], "label": "动机中等", "max_task_difficulty": 3},
      "high": {"range": [70, 100], "label": "动机充足", "max_task_difficulty": 5}
    }
  },

