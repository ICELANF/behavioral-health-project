{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^bhp-(.*)": "@/components/BHP$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/auth/login",
      "style": {
        "navigationBarTitleText": "登录",
        "navigationBarBackgroundColor": "#ffffff",
        "navigationBarTextStyle": "black",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/auth/register",
      "style": {
        "navigationBarTitleText": "注册",
        "navigationBarBackgroundColor": "#ffffff",
        "navigationBarTextStyle": "black"
      }
    },
    {
      "path": "pages/home/index",
      "style": {
        "navigationBarTitleText": "行健平台",
        "navigationBarBackgroundColor": "#ffffff",
        "navigationBarTextStyle": "black",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/notifications/index",
      "style": {
        "navigationBarTitleText": "消息中心",
        "navigationBarBackgroundColor": "#ffffff",
        "navigationBarTextStyle": "black",
        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/profile/index",
      "style": {
        "navigationBarTitleText": "个人中心",
        "navigationBarBackgroundColor": "#ffffff",
        "navigationBarTextStyle": "black"
      }
    }
  ],
  "subPackages": [
    {
      "root": "pages/learning",
      "name": "learning",
      "pages": [
        { "path": "index",          "style": { "navigationBarTitleText": "学习中心", "enablePullDownRefresh": true } },
        { "path": "catalog",        "style": { "navigationBarTitleText": "课程目录" } },
        { "path": "content-detail", "style": { "navigationBarTitleText": "内容详情" } },
        { "path": "video-player",   "style": { "navigationBarTitleText": "视频学习", "navigationStyle": "custom" } },
        { "path": "audio-player",   "style": { "navigationBarTitleText": "音频播放", "navigationStyle": "custom" } },
        { "path": "course-detail",  "style": { "navigationBarTitleText": "课程详情" } },
        { "path": "course-chapter", "style": { "navigationBarTitleText": "章节学习" } },
        { "path": "quiz",           "style": { "navigationBarTitleText": "随堂测验", "navigationStyle": "custom" } },
        { "path": "quiz-result",    "style": { "navigationBarTitleText": "测验结果" } },
        { "path": "my-learning",    "style": { "navigationBarTitleText": "我的学习" } },
        { "path": "credits",        "style": { "navigationBarTitleText": "我的学分" } }
      ]
    },
    {
      "root": "pages/exam",
      "name": "exam",
      "pages": [
        { "path": "index",   "style": { "navigationBarTitleText": "认证考试" } },
        { "path": "intro",   "style": { "navigationBarTitleText": "考试说明" } },
        { "path": "session", "style": { "navigationBarTitleText": "考试作答", "navigationStyle": "custom" } },
        { "path": "result",  "style": { "navigationBarTitleText": "考试结果" } },
        { "path": "history", "style": { "navigationBarTitleText": "考试记录" } }
      ]
    },
    {
      "root": "pages/journey",
      "name": "journey",
      "pages": [
        { "path": "overview",  "style": { "navigationBarTitleText": "成长路径" } },
        { "path": "progress",  "style": { "navigationBarTitleText": "我的进度" } },
        { "path": "promotion", "style": { "navigationBarTitleText": "申请晋级" } },
        { "path": "history",   "style": { "navigationBarTitleText": "申请记录" } }
      ]
    },
    {
      "root": "pages/companions",
      "name": "companions",
      "pages": [
        { "path": "index",       "style": { "navigationBarTitleText": "我的同道者" } },
        { "path": "invite",      "style": { "navigationBarTitleText": "邀请同道者" } },
        { "path": "detail",      "style": { "navigationBarTitleText": "同道者详情" } },
        { "path": "invitations", "style": { "navigationBarTitleText": "收到的邀请" } }
      ]
    },
    {
      "root": "pages/assessment",
      "name": "assessment",
      "pages": [
        { "path": "pending", "style": { "navigationBarTitleText": "待完成评估" } },
        { "path": "do",      "style": { "navigationBarTitleText": "评估作答", "navigationStyle": "custom" } },
        { "path": "result",  "style": { "navigationBarTitleText": "评估结果" } }
      ]
    },
    {
      "root": "pages/coach",
      "name": "coach",
      "pages": [
        { "path": "dashboard",         "style": { "navigationBarTitleText": "教练工作台", "enablePullDownRefresh": true } },
        { "path": "students/index",    "style": { "navigationBarTitleText": "我的学员", "enablePullDownRefresh": true } },
        { "path": "students/detail",   "style": { "navigationBarTitleText": "学员详情" } },
        { "path": "push-queue",        "style": { "navigationBarTitleText": "推送审批" } },
        { "path": "assessment/index",  "style": { "navigationBarTitleText": "评估管理" } },
        { "path": "assessment/review", "style": { "navigationBarTitleText": "审核评估" } },
        { "path": "analytics/index",   "style": { "navigationBarTitleText": "数据分析" } },
        { "path": "flywheel/index",    "style": { "navigationBarTitleText": "AI跟进计划", "navigationStyle": "custom" } },
        { "path": "live/index",        "style": { "navigationBarTitleText": "直播管理" } }
      ]
    },
    {
      "root": "pages/profile-extra",
      "name": "profile-sub",
      "pages": [
        { "path": "certification", "style": { "navigationBarTitleText": "我的认证" } },
        { "path": "performance",   "style": { "navigationBarTitleText": "我的绩效" } },
        { "path": "settings",      "style": { "navigationBarTitleText": "账号设置" } },
        { "path": "leaderboard",   "style": { "navigationBarTitleText": "积分排行榜" } }
      ]
    }
  ],
  "preloadRule": {
    "pages/home/index": {
      "network": "all",
      "packages": ["learning", "journey"]
    }
  },
  "tabBar": {
    "color": "#9ca3af",
    "selectedColor": "#10b981",
    "backgroundColor": "#ffffff",
    "borderStyle": "white",
    "list": [
      {
        "pagePath": "pages/home/index",
        "text": "首页"
      },
      {
        "pagePath": "pages/notifications/index",
        "text": "消息"
      },
      {
        "pagePath": "pages/profile/index",
        "text": "我的"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "行健平台",
    "navigationBarBackgroundColor": "#ffffff",
    "backgroundColor": "#f9fafb",
    "backgroundTextStyle": "light",
    "navigationStyle": "default",
    "app-plus": {
      "background": "#f9fafb"
    }
  },
  "condition": {
    "current": 0,
    "list": [
      { "name": "登录页",      "path": "pages/auth/login" },
      { "name": "首页",        "path": "pages/home/index" },
      { "name": "教练工作台",  "path": "pages/coach/dashboard" }
    ]
  }
}
